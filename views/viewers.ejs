<!DOCTYPE html>
<html>
<head>
  <title>Live Stream Viewer</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://vjs.zencdn.net/8.10.0/video-js.css" rel="stylesheet" />
  <style>
    body, html { margin:0; height:100%; background:#000; display:flex; justify-content:center; align-items:center; }
  </style>
</head>
<body>
  <video-js id="player" class="vjs-default-skin" controls preload="auto" width="960" height="540"
    data-setup='{"liveui": true, "fluid": true}'>
    <source src="<%= hlsUrl %>" type="application/x-mpegURL">
  </video-js>

  <script src="https://vjs.zencdn.net/8.10.0/video.min.js"></script>
  <script src="https://vjs.zencdn.net/http-streaming/3.12.0/videojs-http-streaming.min.js"></script>
  <script>
    const player = videojs('player', {
      html5: {
        vhs: {
          overrideNative: true,
          liveSyncDurationCount: 2,   // buffer only 2 segments
          liveMaxLatencyDurationCount: 3
        }
      }
    });

    player.ready(() => console.log('Player ready'));
    player.on('error', () => console.error('Player error:', player.error()));
  </script>
</body>
</html>